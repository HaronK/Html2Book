{
  "manifest_version": 2,

  "name": "Html2Book",
  "description": "Convertion of HTML pages to book format (fb2, epub, etc.)",
  "version": "0.2.0",

  "options_page": "chrome/options.html",
  
  "content_scripts": [
                      {
                        "matches": ["http://*/*", "https://*/*"],
                        "js": ["chrome/content.js"],
                        "run_at": "document_end"
                      }
                    ],
  
  "background": {
      "scripts": ["html2book_utils.js", "chrome/background.js"]
  },

  "page_action": {
    "default_icon": { "19" : "chrome/page_action.png" },
    "default_title": "Html2Book",
    "default_popup": "chrome/page_action.html"
  },

  "permissions": [
    "tabs", "storage", "http://*/*", "https://*/*"
  ]
}
